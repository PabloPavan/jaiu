{{ define "page/auth/login" }}
<section class="mx-auto grid max-w-md gap-6">
  <div>
    <h1 class="text-2xl font-semibold">Entrar</h1>
    <p class="mt-1 text-sm text-slate-300">Admin e operadores têm acesso às áreas internas.</p>
  </div>

  <form class="grid gap-4 rounded-2xl border border-slate-800 bg-slate-900/60 p-6">
    <label class="grid gap-2 text-sm text-slate-200">
      Email
      <input class="rounded-xl border border-slate-700 bg-slate-950/60 px-3 py-2" type="email" placeholder="voce@academia.com">
    </label>
    <label class="grid gap-2 text-sm text-slate-200">
      Senha
      <input class="rounded-xl border border-slate-700 bg-slate-950/60 px-3 py-2" type="password" placeholder="••••••••">
    </label>
    <button class="rounded-full bg-emerald-400/20 px-4 py-2 text-sm text-emerald-100 hover:bg-emerald-400/30" type="submit">Entrar</button>
  </form>
</section>
{{ end }}
